<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#FAF9F9"
    android:orientation="vertical"
    tools:context=".Penalti">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/grada" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/penalty" />

        <Button
            android:id="@+id/btnizqArr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="11dp"
            android:backgroundTint="#3EF3F0F0"
            android:onClick="comprobarPenalti"
            android:text="1"
            android:textColor="#000000"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnizqAb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="121dp"
            android:backgroundTint="#3EF3F0F0"
            android:onClick="comprobarPenalti"
            android:text="2"
            android:textColor="#000000"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnmedio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="164dp"
            android:layout_marginBottom="146dp"
            android:backgroundTint="#3EF3F0F0"
            android:onClick="comprobarPenalti"
            android:text="3"
            android:textColor="#000000"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnderArr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="11dp"
            android:backgroundTint="#3EF3F0F0"
            android:onClick="comprobarPenalti"
            android:text="4"
            android:textColor="#000000"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnderAb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="11dp"
            android:layout_marginBottom="120dp"
            android:backgroundTint="#3EF3F0F0"
            android:onClick="comprobarPenalti"
            android:text="5"
            android:textColor="#000000"
            android:textSize="24sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#58A127"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:layout_weight="1"
            android:fontFamily="@font/alata"
            android:gravity="center"
            android:text="TIENES UN PENALTI A FAVOR  ELIGE UN LADO PARA TIRARLO"
            android:textColor="#050505"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="invisible"
            app:srcCompat="@drawable/gol"
            tools:visibility="invisible" />
    </LinearLayout>
</LinearLayout>